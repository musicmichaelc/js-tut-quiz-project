---
layout: layout/base.njk
---

<!-- Top section: -->
<div class="intro py-3 bg-white text-center">
  <div class="container">
    <h2 class="text-primary display-3 my-4">{{ title }}</h2>
  </div>
</div>

<!-- Result section: -->
<div class="result py-4 d-none bg-light text-center">
  <div class="container lead">
    <p>{{ scorePrefix }}<span class="text-primary display-4 p-3">0%</span>{{ scoreSuffix }}</p>
  </div>
</div>

<!-- Quiz section: -->
<div class="quiz py-4 bg-primary">
  <div class="container">
    <h2 class="my-5 text-white">{{ caption | safe }}</h2>

    <form class="quiz-form text-light">
      {% for quizItem in quiz %}
        <div class="my-5">
          <p class="lead font-weight-normal">{{ quizItem.question }}</p>
          {% set questionIndex = loop.index %}
          {% set checked = quizItem.answers | length | random %}
          {% for answer in quizItem.answers %}
            <div class="form-check my-2 text-white-50">
              <input type="radio" name="q{{ questionIndex }}" value="{{ loop.index | numToUpperCase }}" {{ 'checked' if loop.index === checked }}>
              <label class="form-check-label">{{ answer }}</label>
            </div>
          {% endfor %}
        </div>
      {% endfor %}

      <div class="text-center">
        <input type="submit" class="btn btn-light">
      </div>
    </form>
  </div>
</div>

<script>{% include 'js/app.js' %}</script>
